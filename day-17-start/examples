class User:
    #pass #placeholder for leaving the function declaration empty
    def __init__(self, user_id, username):
        self.id = user_id
        self.username = username
        self.followers = 0 #this attribute has a hard-coded default value
        self.following = 0 #this attribute has a hard-coded default value

    def follow(self, user):
        user.followers += 1
        self.following += 1


user_1 = User("001", "angela")
user_2 = User("002", "pamela")

user_1.follow(user_2)

print(user_1.followers)
print(user_1.following)
print(user_2.followers)
print(user_2.following)
